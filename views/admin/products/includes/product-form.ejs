<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
  <p>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= product.title %>" required>
  </p>

  <div id="image-upload-control">
    <p>
      <label for="image">Image</label>
      <input type="file" id="image" name="image" accept="image/png,image/jpg" <% if (imageRequired) { %>required<% } %>>
    </p>

    <img src="" alt="Selected image.">
  </div>
  

  <p>
    <label for="type">type</label>
    <input type="text" id="type" name="type" value="<%= product.type %>" required maxlength="250">
  </p>

  <p>
    <label for="uses">uses</label>
    <input type="text" id="uses" name="uses" value="<%= product.uses %>" required maxlength="250">
  </p>

  <p>
    <label for="price">Price</label>
    <input type="number" id="price" name="price" value="<%= product.price %>" min="10.00" step="0.01" required>
  </p>

  <p>
    <label for="description">Description</label>
    <textarea id="description" name="description" rows="7" required><%= product.description %></textarea>
    <!-- should not add  product.desc  %> in value  -->
  </p>

  <p>
    <button type="reset" class="btn btn-alt">Reset</button>
    <button class="btn">Save</button>
  </p>
</form>